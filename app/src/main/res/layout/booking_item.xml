<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pavi="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/id_upcominghistoryLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <!-- android:background="#e2e5e9"-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="7dp">

                    <TextView
                        android:id="@+id/txt_bookingId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#243856"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_tatetime_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:textColor="#5a6574"
                        android:textSize="10sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_finalbill_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="10dp"
                    android:textColor="#243856"
                    android:textStyle="bold" />


            </LinearLayout>

            <ImageView
                android:id="@+id/img_popupmenu_id"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:src="@drawable/dots_vertical" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginLeft="8dp"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingRight="5dp">

            <LinearLayout
                android:id="@+id/ll_pickup_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:padding="2dp"
                    android:src="@drawable/apex_s" />

                <TextView
                    android:id="@+id/txt_pick_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:padding="4dp"
                    android:textColor="#484848"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_drop_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="5dp"
                    android:padding="2dp"
                    android:src="@drawable/destl" />

                <TextView
                    android:id="@+id/txt_drop_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:padding="4dp"
                    android:textColor="#484848"
                    android:textSize="14sp" />

            </LinearLayout>





        </LinearLayout>

        <LinearLayout

            android:id="@+id/ll_luggage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible"
            >

            <ImageView
                android:id="@+id/id_car_seatIV"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="5dp"
                android:padding="2dp"
                android:src="@drawable/ic_car_seat" />

            <TextView
                android:id="@+id/id_car_seat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:padding="4dp"
                android:hint="Passenger"
                android:textColor="#484848"
                android:textSize="8sp" />

            <ImageView
                android:id="@+id/id_car_luggageIV"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="5dp"
                android:padding="3dp"
                android:src="@drawable/ic_luggage" />

            <TextView
                android:id="@+id/id_car_luggagetv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:maxLines="1"
                android:padding="4dp"
                android:hint="Luggage"
                android:textColor="#484848"
                android:textSize="8sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/img_car_id"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp" />

            <TextView
                android:id="@+id/txt_cartype_id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:textColor="#484848"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/txt_bookingstatus_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end|center"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:textSize="14sp"
                android:visibility="gone" />

        </LinearLayout>

        <View

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d9d9d9" />

    </LinearLayout>

</RelativeLayout>
